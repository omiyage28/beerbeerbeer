<%= form_with model: @image, local: true do |f|%>
 <div class="field">
    <%= f.label :title, "TITLE of BEER" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
  <%= f.label :title, "PREFECTURE of BEER" %><br />
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
  <%= f.label :title, "FEATURE of BEER" %><br />
  <%= f.collection_select(:feature_id, Feature.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
    <%= f.label :content, "CONTENT" %><br />
    <%= f.text_area :content, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "IMAGE" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "POST", class: :form__btn  %>
  </div>
<% end %>